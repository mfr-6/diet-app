{
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/va-h/devcontainers-features/uv:1": {
      "shellautocompletion": true,
      "version": "latest"
    }
  },
  "containerEnv": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "UV_LINK_MODE": "copy"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "Gruntfuggly.todo-tree"
      ]
    }
  }
}
